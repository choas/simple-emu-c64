5 REM DAVEVW.COM - CIRCLE
10 DEF FNAC(X)=2*ATN(SQR(1-X*X)/(1+X))
20 DIM DX(100)
30 FOR Y=0 TO 100
40 A1=Y/100
50 DX(Y)=0:IF A1>-1 AND A1<=1 THEN DX(Y)=SIN(FNAC(A1))
60 NEXT Y
70 INPUT RX:RY=RX/2
71 IF RX<=0 THEN STOP
80 FOR Y=-RY TO RY
85 PRINT
90 X=INT(RX*DX(ABS(Y)/RY*100)+0.5)
100 FOR I=1 TO RX+1-X:PRINT " ";:NEXT
110 PRINT "*";
120 FOR I=1 TO X+X:PRINT " ";:NEXT
130 PRINT "*";
140 NEXT Y
150 GOTO 70
