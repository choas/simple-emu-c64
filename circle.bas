100 REM DAVEVW.COM - CIRCLE
110 DEF FNAC(X)=2*ATN(SQR(1-X*X)/(1+X))
120 DIM DX(100)
130 FOR Y=0 TO 100
140 PRINT Y;CHR$(145)
150 A1=Y/100
160 DX(Y)=0:IF A1>-1 AND A1<=1 THEN DX(Y)=SIN(FNAC(A1))
170 NEXT Y
180 DIM S$(244)
190 S$(0)=""
200 FOR I=1 TO 244:S$(I)=S$(I-1)+" ":NEXT I
210 PRINT "      ";CHR$(145)
220 INPUT RX:RY=RX/2
230 IF RX<=0 OR RY<=0 OR RX >= 125 THEN STOP: GOTO 220
240 FOR Y=-RY TO RY
250 PRINT
260 X=INT(RX*DX(ABS(Y)/RY*100)+0.5)
270 PRINT S$(INT(RX+1-X));
280 PRINT "*";
290 PRINT S$(X+X);
300 PRINT "*";
310 NEXT Y
320 GOTO 220
